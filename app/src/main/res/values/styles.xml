    <!--荣耀绿-->
    <style name="mHonorGreen" parent="Base.Theme.DarkActionBar">
        <item name="colorPrimary">#FF00ACC2</item>
        <item name="colorAccent">#FF00ACC2</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">#FF00ACC2</item>
        <item name="android:statusBarColor">#FF00ACC2</item>
        <item name="android:navigationBarColor">#FF00ACC2</item>
        <item name="colorButtonNormal">@color/White</item>
