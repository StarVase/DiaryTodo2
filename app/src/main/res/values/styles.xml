    </style>
    
    <!--星空黑-->
    <style name="mStarBlack" parent="Base.Theme.DarkActionBar">
        <item name="colorPrimary">@color/Dark</item>
        <item name="colorAccent">@color/Dark</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@color/Dark</item>
        <item name="android:statusBarColor">@color/Dark</item>
        <item name="android:navigationBarColor">@color/Dark</item>
        <item name="colorButtonNormal">@color/White</item>
        <item name="android:actionModeBackground">@null</item>
        <item name="android:windowBackground">@color/White</item>
        <item name="android:windowLightNavigationBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    
        <!--夜间黑-->
    <style name="mNight" parent="Base.Theme.Dark">
        <item name="colorPrimary">@color/Dark</item>
        <item name="colorAccent">@color/Blue</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">?colorPrimary</item>
        <item name="android:statusBarColor">?colorPrimary</item>
        <item name="android:navigationBarColor">?colorPrimary</item>
