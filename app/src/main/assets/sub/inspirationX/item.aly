{
  LinearLayout;
  gravity="center";
  layout_width="fill";
  layout_height="56dp";
  {
    ImageView,
    id="img",
    layout_margin="16dp",
    src="images/inspiration.png",
    layout_width="24dp",
    layout_height="24dp",
    colorFilter=icon,
  },
  {
    TextView;
    id="title";
    textSize="16sp";
    layout_weight="1";
    layout_marginLeft="16dp";
    layout_marginRight="16dp";
    textColor=textColor;
    singleLine="true";
  };

};