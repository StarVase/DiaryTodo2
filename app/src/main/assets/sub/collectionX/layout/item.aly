
{
  LinearLayout;
  layout_height="56dp";
  layout_width="fill";
  orientation="horizontal";
  --layout_marginTop="8dp";
  --layout_marginBottom="8dp";
  gravity="center";
  {
    ImageView;
    ImageResource=R.drawable.ic_star,
    layout_width="24dp";
    layout_margin="16dp";
    colorFilter=icon;
    layout_height="24dp";
  };
  {
    LinearLayout;
    layout_height="fill";
    layout_width="fill";
    orientation="vertical";
    layout_gravity="left|center";
    layout_marginLeft="16dp";
    layout_marginRight="16dp";

    {
      TextView;
      id="title";
      textSize="16dp";
      singleLine="true";
      textColor=textColor;
      paddingTop="8dp",
      layout_weight="2";
    };

    {
      TextView;
      id="sub";
      textSize="10dp";
      singleLine="true";
      textColor=textColor;
      paddingBottom="8dp",
      layout_weight="1";
    };
  };
}